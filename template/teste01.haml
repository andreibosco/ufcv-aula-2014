    %script{:src => 'js/jquery-1.10.2.min.js'}

    :javascript
      $(document).ready(function(){
        // variáveis gerais
        var $sidebar = $("#sidebar");

        // sidebar (menu)
        $(".pure-menu-heading").click(function(){
          var $sidebarOffset = $sidebar.offset();
          if ($sidebarOffset.left < 0) {
            $sidebar.animate({
              left: "0px"
            }, 300);
          } else {
            $sidebar.animate({
              left: "-200px"
            }, 300);
          }
        });

        // seções
        $("#main section").each(function(){
          // obter o tipo de seção
          $sectionType = $(this).data("section-type");
          console.info($sectionType);
          // criar item de navegação correspondente
          $(".sections .previous").before("<li><a href='#'><span class=icon-"+$sectionType+"></span></a></li>" );
        })
      })

